{
	"$schema": "https://biomejs.dev/schemas/1.9.1/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [],
		"include": [
			"src/**/*.js",
			"src/**/*.ts",
			"src/**/*.jsx",
			"src/**/*.tsx"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"lineWidth": 80,
		"indentWidth": 2
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}